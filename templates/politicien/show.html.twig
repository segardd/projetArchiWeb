{% extends 'base.html.twig' %}

{% block title %}Politicien
{% endblock %}

{% block body %}
	<h1>Politicien</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ politicien.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ politicien.nom }}</td>
			</tr>
			<tr>
				<th>Sexe</th>
				<td>{{ politicien.sexe }}</td>
			</tr>
			<tr>
				<th>Age</th>
				<td>{{ politicien.age }}</td>
			</tr>
			<tr>
				<th>Affaires</th>
				<td>
					{% for affaire in politicien.affaires %}
						<div>{{ affaire.designation }}</div>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('politicien_index') }}">back to list</a>

	<a href="{{ path('politicien_edit', {'id': politicien.id}) }}">edit</a>

	{{ include('politicien/_delete_form.html.twig') }}
{% endblock %}
